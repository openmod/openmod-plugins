<article class="py-4 border-b border-gray-200">
    <h2 class="inline-block text-lg font-semibold leading-none text-black cursor-pointer hover:text-primary-600">
        @Plugin.Id
    </h2>

    <div class="text-base font-normal text-gray-500">
        <p class="mt-1 w-full">@Plugin.Description</p>
        <p class="flex mt-2 w-full text-sm font-normal flex-wrap">
            @foreach (var owner in Plugin.Owners)
            {
                <div style="display: inline-flex;">
                    <img src="@($"https://www.nuget.org/profiles/" + owner + "/avatar?imageSize=64")" alt="" class="mr-2 w-5 h-5" />
                    <span class="mr-2 font-medium text-gray-900">@owner</span>
                </div>
            }
            <div> <!-- wrapped in the div for better wrapping -->
                <span>@("v" + Plugin.LatestVersion)</span>
                <span class="mx-1">·</span>
                <span>@Plugin.TotalDownloads downloads</span>
            </div>
        </p>
    </div>
</article>

@code
{
    [Parameter]
    public Plugin Plugin { get; set; } = null!;
}
